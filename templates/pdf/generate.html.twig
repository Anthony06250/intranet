{% set links %}
    <link href="{{ absolute_url('/assets/css/app-modern-pdf.min.css') }}" rel="stylesheet" type="text/css">
{% endset %}

{% if copy_for is defined %}
    {% include 'pdf/' ~ class ~ '/' ~ document ~ '-' ~ locale ~ '.html.twig' with {'links': links, 'copy_for': 'Pdf.Customer copy' | trans({}, 'messages')} %}
    {% include 'pdf/' ~ class ~ '/' ~ document ~ '-' ~ locale ~ '.html.twig' with {'copy_for': 'Pdf.Store copy' | trans({}, 'messages')} %}
{% else %}
    {% include 'pdf/' ~ class ~ '/' ~ document ~ '-' ~ locale ~ '.html.twig' with {'links': links} %}
{% endif %}
